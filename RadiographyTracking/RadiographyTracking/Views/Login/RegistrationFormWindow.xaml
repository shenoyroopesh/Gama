<controls:ChildWindow x:Class="RadiographyTracking.Views.RegistrationFormWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:local="clr-namespace:RadiographyTracking.LoginUI"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="325" 
           Style="{StaticResource LogRegWindowStyle}"
           Title="User Registration">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <local:RegistrationForm x:Name="RegistrationForm" Grid.Row="0" />
    </Grid>
</controls:ChildWindow>